{
  "extends": "next/core-web-vitals",
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-useless-escape": "off",
    "array-callback-return": "error",
    "for-direction": "error",
    "no-cond-assign": "error",
    "no-dupe-keys": "error",
    "no-duplicate-imports": "error",
    "no-unreachable": "error",
    "no-unused-vars": "warn",
    "curly": "error",
    "default-case": "error"
  }
}
